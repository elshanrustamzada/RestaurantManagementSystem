@model UpdateVM

<div class="col-6">
    <div class="card shadow mb-4">
        <div class="card-header">
            <strong class="card-title">Update User</strong>
            <div asp-validation-summary="ModelOnly" style="color:red"></div>
        </div>
        <div class="card-body">
            <form method="post">

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control">
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control">
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>

                <div class="form-group">
                    <label>Role select</label>
                    <select class="form-control" name="role">
                        @foreach (string role in ViewBag.Roles)
                        {
                            if (Model.Role == role)
                            {
                                <option selected value="@role">@role</option>
                            }
                            else
                            {
                                <option value="@role">@role</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-secondary text-white mr-2" asp-action="Index">Go Back</a>

            </form>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
