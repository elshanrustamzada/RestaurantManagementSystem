@model UpdateVM


<div class="x_content">

    <div asp-validation-summary="ModelOnly" style="color:red"></div>

    <form method="post" class="form-horizontal form-label-left" novalidate>

        <span class="section">İstifadəçi dəyişdir</span>


        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="Name" class="form-control col-md-7 col-xs-12" placeholder="Ad">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>


        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="Surname" class="form-control col-md-7 col-xs-12" placeholder="Soyad">
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
        </div>


        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="Username" class="form-control col-md-7 col-xs-12" placeholder="İstifadəçi adı">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <select class="form-control" name="role">
                    @foreach (string role in ViewBag.Roles)
                    {
                        <option value="@role">@role</option>
                    }
                </select>
            </div>
        </div>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="Email" class="form-control col-md-7 col-xs-12" placeholder="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <a asp-action="Index" class="btn btn-primary">Geri</a>
                <button type="submit" class="btn btn-success">Əlavə Et</button>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
