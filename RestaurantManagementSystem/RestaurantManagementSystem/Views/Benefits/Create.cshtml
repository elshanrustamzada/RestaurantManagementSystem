@model Benefit

<div class="x_content">

    <form method="post" class="form-horizontal form-label-left" novalidate>

        <span class="section">Gəlir əlavə et</span>

        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="Amount" class="form-control col-md-7 col-xs-12" placeholder="Məbləğ">
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="Description" class="form-control col-md-7 col-xs-12" placeholder="Məlumat">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="item form-group">
            <label class="control-label col-md-3 col-sm-3 col-xs-12"></label>
            <div class="col-md-6 col-sm-6 col-xs-12">
                <input asp-for="By" class="form-control col-md-7 col-xs-12" placeholder="Daxil edən şəxs">
                <span asp-validation-for="By" class="text-danger"></span>
            </div>
        </div>
     
        <div class="ln_solid"></div>
        <div class="form-group">
            <div class="col-md-6 col-md-offset-3">
                <a asp-action="Index" class="btn btn-primary">Geri</a>
                <button type="submit" class="btn btn-success">Əlavə Et</button>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}